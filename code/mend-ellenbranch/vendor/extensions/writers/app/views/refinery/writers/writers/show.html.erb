<% content_for :body_content_title do %>
  <%= @writer.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @writer.name %>
    </p>
  </section>
  <section>
    <h1>Bio</h1>
    <p>
      <%=raw @writer.bio %>
    </p>
  </section>
  <section>
    <h1>Web Url</h1>
    <p>
      <%=raw @writer.web_url %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @writer.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="writers">
      <% @writers.each do |writer| %>
        <li>
          <%= link_to writer.name, refinery.writers_writer_path(writer) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
